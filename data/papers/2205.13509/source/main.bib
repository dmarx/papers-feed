@article{noiseflagella2,
author = {Marco Polin  and Idan Tuval  and Knut Drescher  and J. P. Gollub  and Raymond E. Goldstein },
title = {<i>Chlamydomonas</i> Swims with Two \&\#x201c;Gears\&\#x201d; in a Eukaryotic Version of Run-and-Tumble Locomotion},
journal = {Science},
volume = {325},
