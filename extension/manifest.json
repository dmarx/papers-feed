{
  "manifest_version": 3,
  "name": "Academic Paper Tracker",
  "version": "1.1",
  "description": "Track and rate academic papers from multiple sources",
  "permissions": [
    "tabs",
    "storage",
    "webNavigation",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://arxiv.org/*",
    "*://www.semanticscholar.org/*",
    "*://doi.org/*",
    "*://dl.acm.org/*",
    "*://openreview.net/*", 
    "*://api.openreview.net/*",
    "*://api.github.com/*"
  ],
  "background": {
    "service_worker": "dist/background.bundle.js",
    "type": "module"
  },
  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": ["dist/content.bundle.js"],
    "run_at": "document_end"
  }],
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
